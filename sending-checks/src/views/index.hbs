			<div class="col-lg-6 content-right" id="start">
				<div id="wizard_container">
					<div id="top-wizard">


						<!-- /form -->
						<form method="POST" action="/">

							<div id="middle-wizard">

								<!-- /step-->
								<div class="submit step">
									<h3 class="main_question"><strong>1/1</strong>Send a check!</h3>

									<div class="form-group">
										<label>Amount</label>
										<input type="text" class="form-control" name="amount" required>
									</div>
									<div class="form-group">
										<label>To</label>
										<input type="text" class="form-control" name="receiver" required>
									</div>
									<div class="form-group">
										<label>From</label>
										<input type="text" class="form-control" name="sender" required>
									</div>
									<div class="form-group">
										<label>Memo</label>
										<textarea name="memo" class="form-control" required style="height:70px;"
											placeholder="Enter your memo here..."></textarea>
									</div>
									<div class="form-group">
										<label>Send Date</label>
										<input type="date" class="form-control" name="date" required>
									</div>
								</div>

							</div>
							{{#if response}}
							<div class="alert alert-primary alert-wth-icon alert-dismissible fade show" role="alert">
								<span class="alert-icon-wrap"><i class="fa fa-info"></i></span>{{response}}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							{{/if}}
							<!-- /middle-wizard -->
							<div id="bottom-wizard">
								<button type="submit" class="submit">Send Check</button>
							</div>
							<!-- /bottom-wizard -->
						</form>
